@page
@model ChurrasTrinca.Pages.Participantes.DetailsModel

@{
    ViewData["Title"] = "Detalhes do participante";
}

<section id="contact" class="contact">
    <div class="container p-5" style="box-shadow: 0px 0px 15px 15px rgba(0, 0, 0, 0.1); border-radius: 10px;">

        <div class="text-start">
            <h3 style="font-weight: 700; color: #157347;"><a asp-page="/Churrascos/Edit" asp-route-id="@Model.Churrasco?.Id">Voltar</a></h3>
        </div>

        <div class="section-title">
            <h1 data-aos="fade-up">Detalhes do participante</h1>
        </div>

        <div class="row justify-content-center" data-aos="fade-up" data-aos-delay="300">
            <div class="col-xl-9 col-lg-12 mt-4">
                <div class="row">
                    <div class="col-md-4 form-group">
                        <label asp-for="Participante.Nome" class="control-label"></label>
                        <input asp-for="Participante.Nome" class="form-control" disabled />
                    </div>
                    <div class="col-md-4 form-group">
                        <label asp-for="Participante.ValorContribuicaoChurras" class="control-label"></label>
                        <input asp-for="Participante.ValorContribuicaoChurras" class="form-control" disabled />
                    </div>
                    <div class="col-md-4 form-group">
                        <label asp-for="Participante.ValorContribuicaoBebidas" class="control-label"></label>
                        <input asp-for="Participante.ValorContribuicaoBebidas" class="form-control" disabled />
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-4 form-group">
                        <label asp-for="Participante.ChurrascoId" class="control-label"></label>
                        <input class="form-control" value="@ViewData["Churrasco"]" disabled />
                    </div>
                    <div class="col-md-4 form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Participante.ParticipantePagou" disabled /> @Html.DisplayNameFor(model => model.Participante.ParticipantePagou)
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
